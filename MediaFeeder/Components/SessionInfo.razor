@using Humanizer
@using MediaFeeder.Data
@using MediaFeeder.Data.db
@using MediaFeeder.PlaybackManager
@using Microsoft.EntityFrameworkCore;

<div>
    @if( Session != null) {
        <GridRow Gutter="16">
            <GridCol Span="8">
                <Image
                    Src="@($"api/video/{Session.Video?.Id}/thumbnail/")"
                    Alt="Video thumbnail Icon"
                    Fallback="data:image/png;base64,"
                    Preview="false"/>
            </GridCol>
            <GridCol Span="16">
                <CardMeta>
                    <TitleTemplate>
                        <span style="text-wrap-mode: wrap;">
                            @(Session.Video?.Name ?? "Unknown")
                        </span>
                    </TitleTemplate>
                    <DescriptionTemplate>
                        <span>
                            @(Session.Video?.Subscription?.Name)
                            •
                            @(Session.Video?.PublishDate.Humanize() ?? "")
                        </span>
                    </DescriptionTemplate>
                </CardMeta>
            </GridCol>
        </GridRow>

        @if (Session.CurrentPosition != null)
        {
            <Progress
                SuccessPercent="@((Session.CurrentPosition.Value.TotalSeconds / Session.Video?.DurationSpan?.TotalSeconds ?? 1) * 100)"
                Percent="@((Session.Loaded * 100) ?? 0)"
                ShowInfo="false"></Progress>
        }
        @if (Session.Video != null)
        {
            <CardMeta Style="display: block;"
                      Description="@($"{Session.State} - {Session.Quality} - {Session.Rate}x - {Session.Volume}% volume")">
                <TitleTemplate>
                    <Flex Justify="FlexJustify.SpaceBetween">
                        <span>@(Session.Provider?.Humanize())</span>
                        <span>@(Session.CurrentPosition?.ToString()) / @(Session.Video?.DurationSpan.ToString())</span>
                    </Flex>
                </TitleTemplate>
            </CardMeta>
        }

        <GridRow Justify="RowJustify.Center" Gutter="(16, 16)" Class="control_bar">
            <GridCol>
                <Button @onclick="@(() => Session.SeekRelative(-30))" Icon="@IconType.Outline.FastBackward">30s</Button>
            </GridCol>
            <GridCol>
                <Button Style="min-width: 12ex;" @onclick="@(() => Session.PlayPause())" Icon="@IconType.Outline.Pause">Pause</Button>
            </GridCol>
            <GridCol>
                <Button @onclick="@(() => Session.SeekRelative(+30))" Icon="@IconType.Outline.FastForward">30s</Button>
            </GridCol>
            <GridCol>
                <Button Style="min-width: 22ex;" @onclick="@(() => Session.Watch())" Icon="@IconType.Outline.Eye">Mark Watched</Button>
            </GridCol>
            <GridCol>
                <Button Style="min-width: 12ex;" @onclick="@(() => Session.Skip())" Icon="@IconType.Outline.FastForward">Skip</Button>
            </GridCol>
        </GridRow>

        <AntList Size="ListSize.Small" Style="margin-top: 16px; max-height: 300px; overflow-y: auto;" Bordered DataSource="@Session.Playlist">
            <Header>
                <Flex Gap="FlexGap.Small">
                    <TreeSelect
                        DataSource="@allFolders"
                        @bind-Value="@Session.SelectedFolderId"
                        Placeholder="Please select folder"
                        ItemValue="static item => item.Id"
                        ItemLabel="static item => item.Name"
                        AllowClear
                        EnableSearch
                        MatchedStyle="font-weight: bold"
                        ChildrenExpression="static node => node.DataItem.Subfolders"
                        TitleExpression="static node => node.DataItem.Name"
                        TitleTemplate="static node => node.DataItem.Name.ToRenderFragment()"
                        KeyExpression="static node => node.DataItem.Id.ToString()"
                        IsLeafExpression="static node => node.DataItem.Subfolders.Count == 0"/>
                    <DropdownButton OnClick="@(() => Session.TriggerAddVideos(60))">
                        <ChildContent>
                            <div>
                                <Icon Type="@IconType.Outline.Plus"/>
                                Add 1 Hour
                            </div>
                        </ChildContent>
                        <Overlay>
                            <Menu>
                                <MenuItem @onclick="@(() => Session.TriggerAddVideos(15))">15 minutes</MenuItem>
                                <MenuItem @onclick="@(() => Session.TriggerAddVideos(30))">30 minutes</MenuItem>
                                <MenuItem @onclick="@(() => Session.TriggerAddVideos(120))">2 hours</MenuItem>
                            </Menu>
                        </Overlay>
                    </DropdownButton>
                </Flex>
            </Header>
            <ChildContent Context="item">
                <ListItem>
                    <ListItemMeta>
                        <AvatarTemplate>
                            <Avatar Shape="AvatarShape.Square" Size="AvatarSize.Large" Src="@($"api/video/{item.Id}/thumbnail/")"/>
                        </AvatarTemplate>
                        <TitleTemplate>
                            @item.Name
                        </TitleTemplate>
                        <DescriptionTemplate>
                            <span>@(item.DurationSpan.ToString() ?? "??:??") • @(item.Subscription?.Name)</span>
                        </DescriptionTemplate>
                    </ListItemMeta>
                    <Actions>
                        <a key="remove" @onclick="@(() => Session?.RemoveFromPlaylist(item))">remove</a>
                    </Actions>
                </ListItem>
            </ChildContent>
        </AntList>
    } else {
        <span>Loading...</span>
    }
</div>

@code {
    [Parameter]
    [EditorRequired]
    public PlaybackSession? Session { get; set; }

    [Inject] public required MediaFeederDataContext Context { get; set; }

    List<Folder> allFolders = [];

    protected override async Task OnParametersSetAsync()
    {
        if (Context != null && allFolders.Count() == 0)
        {
            allFolders = Context.Folders
                .AsNoTracking()
                .Where(f => f.User == Session.User)
                .Include(static f => f.Subfolders)
                .ToList();
        }

        if (Session != null)
            Session.UpdateEvent += () => InvokeAsync(StateHasChanged);
    }

    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        if (Session != null && Session.SelectedFolderId == null && allFolders.Any())
        {
            Session.SelectedFolderId = allFolders.First().Id;
            StateHasChanged();
        }

        return base.OnAfterRenderAsync(firstRender);
    }

}
